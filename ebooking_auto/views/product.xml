<odoo>
  <data>
    <!-- Zasvar uilchilgee -->
    <record model="ir.ui.view" id="ebooking_auto.view_tree_product_category">
        <field name="name">ebooking_auto.product.category.tree</field>
        <field name="model">product.category</field>
        <field name="arch" type="xml">
            <tree string="Засвар үйлчилгээний төрөл">
                <field name="name" string="Нэр"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="ebooking_auto.view_form_product_category">
        <field name="name">ebooking_auto.product.category.form</field>
        <field name="model">product.category</field>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="146" icon="fa-th-list" type="action" context="{'search_default_categ_id': active_id}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="product_count"/></span>
                                <span class="o_stat_text">Нийт ЗҮ</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Төрлийн нэр" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="ж. Кузов"/></h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="ebooking_auto.view_search_product_category">
      <field name="name">ebooking_auto.product.category.search</field>
      <field name="model">product.category</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <filter name="repair" string="Засвар үйлчилгээ" domain="[('parent_id.name', '=', 'Засвар үйлчилгээ'),('parent_id.parent_id.id','=',1)]"/>
       </search>
      </field>
    </record>
    <record model="ir.actions.act_window" id="ebooking_auto.action_window_repair_category">
        <field name="name">Засвар үйлчилгээний төрөл</field>
        <field name="res_model">product.category</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="ebooking_auto.view_tree_product_category"/>
        <field name="search_view_id" ref="ebooking_auto.view_search_product_category"/>
        <field name="context">{'search_default_repair':1, 'is_repair':True}</field>
    </record>
    <record model="ir.actions.act_window.view" id="ebooking_auto.action_window_repair_category_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="ebooking_auto.view_tree_product_category"/>
        <field name="act_window_id" ref="ebooking_auto.action_window_repair_category"/>
    </record>
    <record model="ir.actions.act_window.view" id="ebooking_auto.action_window_repair_category_form">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="ebooking_auto.view_form_product_category"/>
        <field name="act_window_id" ref="ebooking_auto.action_window_repair_category"/>
    </record>

    <record model="ir.ui.view" id="ebooking_auto.view_tree_product_template">
        <field name="name">ebooking_auto.product.template.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree string="Засвар үйлчилгээний төрөл">
                <field name="default_code" string="Код"/>
                <field name="name" string="Нэр"/>
                <field name="categ_id" string="Төрөл"/>
                <field name="list_price" string="Борлуулах үнэ"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="ebooking_auto.view_form_product_template">
      <field name="name">ebooking_auto.product.template.form</field>
      <field name="model">product.template</field>
      <field name="arch" type="xml">
        <form string="Засвар үйлчилгээ">
            <sheet>
                <field name="id" invisible="True"/>
                <div class="oe_button_box" name="button_box">
                    <!-- <button class="oe_stat_button" name="action_view_sales" type="object" icon="fa-mnt">
                        <field string="Sales" name="sales_count" widget="statinfo"/>
                    </button> -->
                    <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                        <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                    </button>
                </div>
                <div class="oe_title">
                    <label class="oe_edit_only" for="name" string="Засвар үйлчилгээний нэр"/>
                    <h1><field name="name" placeholder=""/></h1>
                    <field name="sale_ok" invisible="1"/>
                    <field name="purchase_ok" invisible="1"/>
                </div>
                <notebook>
                    <page string="Ерөнхий мэдээлэл" name="general_information">
                        <group>
                            <group name="group_general">
                                <field name="type" invisible="1"/>
                                <field name="categ_id" string="Төрөл" domain="[('parent_id.name', '=', 'Засвар үйлчилгээ'),('parent_id.parent_id.id','=',1)]"/>
                                <field name="default_code" string="Код" required="1"/>
                                <field name="barcode" string="Бар код"/>
                            </group>
                            <group name="group_standard_price">
                                <field name="list_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}" string="Борлуулах үнэ"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                    </page>
                    <page string="Хямдрал" attrs="{'invisible':[('sale_ok','=',False)]}" name="sales">
                        <div name="pricelist_item">
                            <separator string="Хямдралын үнэ"/>
                            <field name="item_ids" nolabel="1" context="{'default_base':'list_price', 'default_applied_on' :'1_product'}">
                                <tree string="Pricelist Items" editable="bottom">
                                    <field name="pricelist_id" required="1" string="Хямдралын төрөл"/>
                                    <field name="fixed_price" required="1" string="Үнэ"/>
                                    <field name="min_quantity" string="Тоо хэмжээ"/>
                                    <field name="date_start" string="Эхлэх огноо"/>
                                    <field name="date_end" string="Дуусах огноо"/>
                                    <field name="applied_on" invisible="1"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                    <page string="Тайлбар" name="notes">
                        <group string="Тайлбар мэдээлэл" attrs="{'invisible': [('sale_ok','=',False)]}">
                            <field name="description_sale" nolabel="1" placeholder=""/>
                        </group>
                    </page>
                </notebook>
            </sheet>
        </form>
      </field>
    </record>
