<odoo>
  <data>
    <record model="ir.ui.view" id="ebooking_auto.view_tree_vehicle_model">
      <field name="name">ebooking_auto.fleet.vehicle.model.tree</field>
      <field name="model">fleet.vehicle.model</field>
      <field name="arch" type="xml">
        <tree string="Автомашины марк">
          <field name="brand_id" string="Үйлдвэрлэгч"/>
          <field name="name" string="Маркын нэр"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="ebooking_auto.view_form_vehicle_model">
      <field name="name">ebooking_auto.fleet.vehicle.model.form</field>
      <field name="model">fleet.vehicle.model</field>
      <field name="arch" type="xml">
        <form string="Автомашины марк">
          <sheet>
            <field name="image_medium" widget="image" class="oe_avatar"/>
            <div class="oe_title">
              <label for="name" class="oe_edit_only" string="Маркын нэр"/>
              <h1>
                <field name="name" placeholder="ж. Land Cruiser 200 GX.R"/>
              </h1>
              <label for="brand_id" class="oe_edit_only" string="Үйлдвэрлэгч"/>
              <h2>
                <field name="brand_id" placeholder="ж. Toyota" on_change="1" can_create="false" can_write="false"/>
              </h2>
            </div>
          </sheet>
        </form>
      </field>
    </record>
    <record model="ir.ui.view" id="ebooking_auto.view_search_vehicle_model">
      <field name="name">ebooking_auto.fleet.vehicle.model.search</field>
      <field name="model">fleet.vehicle.model</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="brand_id"/>
          <filter name="toyota" string="Тоёота"
                  domain="[('brand_id.id', '=', 61)]"/>
          <filter name="lexus" string="Лексус"
                  domain="[('brand_id.id', '=', 34)]"/>
        </search>
      </field>
    </record>
    <record model="ir.actions.act_window" id="ebooking_auto.action_window_vehicle_model">
      <field name="name">Автомашины марк</field>
      <field name="res_model">fleet.vehicle.model</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="ebooking_auto.view_tree_vehicle_model"/>
      <field name="search_view_id" ref="ebooking_auto.view_search_vehicle_model"/>
      <field name="context">{'search_default_toyota': 1, 'search_default_lexus': 1}</field>
    </record>
    <record model="ir.actions.act_window.view" id="ebooking_auto.action_window_vehicle_model_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="ebooking_auto.view_tree_vehicle_model"/>
        <field name="act_window_id" ref="ebooking_auto.action_window_vehicle_model"/>
    </record>
    <record model="ir.actions.act_window.view" id="ebooking_auto.action_window_vehicle_model_form">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="ebooking_auto.view_form_vehicle_model"/>
        <field name="act_window_id" ref="ebooking_auto.action_window_vehicle_model"/>
    </record>
