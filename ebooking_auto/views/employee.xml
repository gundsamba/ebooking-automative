    <record model="ir.actions.act_window" id="ebooking_auto.action_window_employee_department">
      <field name="name">Алба нэгж</field>
      <field name="res_model">hr.department</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>
    <record model="ir.ui.view" id="ebooking_auto.view_tree_hr_department">
      <field name="name">ebooking_auto.hr.department.tree</field>
      <field name="model">hr.department</field>
      <field name="inherit_id" ref="hr.view_department_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree" position="replace">
            <tree string="Алба нэгж">
                <field name="name" string="Нэр"/>
                <field name="manager_id" string="Нэгжийн дарга"/>
                <field name="parent_id" string="Толгой нэгж"/>
            </tree>
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="ebooking_auto.view_form_hr_department">
      <field name="name">ebooking_auto.hr.department.form</field>
      <field name="model">hr.department</field>
      <field name="inherit_id" ref="hr.view_department_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form" position="replace">
            <form string="Алба нэгж">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
