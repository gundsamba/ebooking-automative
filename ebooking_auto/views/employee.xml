      <field name="view_mode">tree,form,kanban</field>
    </record>
    <record model="ir.ui.view" id="ebooking_auto.view_tree_hr_job">
      <field name="name">ebooking_auto.hr.department.tree</field>
      <field name="model">hr.job</field>
      <field name="inherit_id" ref="hr.view_hr_job_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree" position="replace">
            <tree string="Албан тушаал">
                <field name="name" string="Нэр"/>
                <field name="no_of_employee" string="Ажилтаны тоо"/>
            </tree>
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="ebooking_auto.view_form_hr_job">
      <field name="name">ebooking_auto.hr.department.form</field>
      <field name="model">hr.job</field>
      <field name="inherit_id" ref="hr.view_hr_job_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form" position="replace">
            <form string="Албан тушаал">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Албан тушаал"/>
                        <h1><field name="name" placeholder="ж. Борлуулалтын менежер"/></h1>
                    </div>
                </sheet>
            </form>
        </xpath>
      </field>
    </record>
  </data>
