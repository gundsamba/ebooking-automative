                        <field name="name" string="Нэр"/>
                        <field name="manager_id" string="Нэгжийн дарга"/>
                        <field name="parent_id" string="Толгой нэгж"/>
                    </group>
                </sheet>
            </form>
        </xpath>
      </field>
    </record>

    <record model="ir.actions.act_window" id="ebooking_auto.action_window_employee_job">
      <field name="name">Албан тушаал</field>
      <field name="res_model">hr.job</field>
